{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MassTransit.SingUp.API/MassTransit.SingUp.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/MassTransit.SingUp.API/MassTransit.SingUp.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/MassTransit.SingUp.API/MassTransit.SingUp.API.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
	{
      "label": "dotnet watch run",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "watch",
        "run"
      ],
      "problemMatcher": "$msCompile"
    }

    ]
}